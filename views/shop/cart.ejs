<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= pageTitle %></title>
    <link rel="stylesheet" href="/css/main.css">
</head>
<body>
    <%- include('../navi/navigation.ejs') %>
    <%  if(products.length>0) {  %>
        <ul>
            <% products.forEach(p =>{%>
                <li><%=p.productData.title %>(<%= p.qty%>)</li>
                <form method="POST" action="/cart-delete-item">
                <input type="hidden" value="<%= p.productData.id %>" name="productId"/>
                <button class="card-button" type="submit">Delete</button>
                </form>
                <% })%>
        </ul>
        <% }else {%>
            <h1>NO PRODUCTS IN CART</h1>
        <% } %>
</body>
</html>